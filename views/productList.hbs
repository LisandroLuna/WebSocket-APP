<h1 class="display-4">Lista de productos</h1>
{{#if list}}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Titulo</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
        </tr>
        </thead>
        <tbody>
        {{#each list}}
            <tr>
                <th scope="row">{{ this.id }}</th>
                <td>{{ this.title }}</td>
                <td>${{ this.price }}</td>
                <td><img src="{{ this.thumbnail }}" class="img-fluid"/></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="alert alert-danger" role="alert">
        No hay productos
    </div>
{{/if}}